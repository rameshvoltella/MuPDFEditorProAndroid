<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background track (transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Fully transparent -->
            <size android:height="4dp"/> <!-- Thickness of the line -->
        </shape>
    </item>

    <!-- Progress bar (color) -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE"/> <!-- Progress bar color -->
            <size android:height="4dp"/>
        </shape>
    </item>
</layer-list>
