<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MUPDFHighliter" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="StyleBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_corner_shape</item>
    </style>

    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">#FF0000</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <!-- Splash Screen Theme -->
    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Set your splash screen background -->
        <item name="windowSplashScreenBackground">@color/muPDFReaderView_bg</item>

        <!-- Optionally, add an animated icon for the splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/pdffile</item>

        <!-- Set the duration of the icon animation -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Control the splash screen transition fade-out duration -->
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

</resources>